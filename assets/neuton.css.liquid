         url('{{ "alegreya-italic.woff" | asset_url }}') format('woff'),
         url('{{ "alegreya-italic.ttf" | asset_url }}') format('truetype'),
         url('{{ "alegreya-italic.svg" | asset_url }}#neuton') format('svg');
    font-weight: 300;
    font-style: italic;
  }

