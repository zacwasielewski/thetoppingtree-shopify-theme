/* Bow Builder progress meter
------------------------------------------------*/

.bowbuilder-progress {
  margin: 50px 0;
}
.bowbuilder-progress li {
  display: inline-block;
  font-weight: 300;
  line-height: 48px;
  color: #dedede;
}

.bowbuilder-progress li:before {
  font-family: 'Lunchbox Ornaments';
  content: 'v';
  margin: 0 .5em;
  font-size: 36px;
  height: 24px;
  color: #dedede;
  position: relative;
  top: 6px;
}
.bowbuilder-progress li:first-child:before {
  content: none;
}

.bowbuilder-progress li .step-order {
  background-color: {{ settings.text-colour }};
  color: #fff;
  display: inline-block;
  width: 36px;
  height: 36px;
  line-height: 36px;
  border-radius: 20px;
  margin-right: .25em;
}

.bowbuilder-progress li,
.bowbuilder-progress li a {
  color: {{ settings.text-colour }};
}
.bowbuilder-progress li .step-order {
  background-color: {{ settings.text-colour }};
}

.bowbuilder-progress li.active,
.bowbuilder-progress li.active a {
  color: {{ settings.link-hover-colour }};
}
.bowbuilder-progress li.active .step-order {
  background-color: {{ settings.link-hover-colour }};
}

.bowbuilder-progress li.complete,
.bowbuilder-progress li.complete a {
  color: {{ settings.link-colour }};
}
.bowbuilder-progress li.complete .step-order {
  background-color: {{ settings.link-colour }};
}


/* Bow Builder content
------------------------------------------------*/

.bowbuilder-steps .step h2 {
  text-align: center;
}

.bowbuilder .step-content .step-pane {
  display: none;
}
.bowbuilder .step-content .step-pane.active {
  display: block;
}

.bowbuilder-products .product-list .product-list-item {
  margin: 0 0 20px 20px;
  width: 198px;
  border: 1px solid #eee;
  background-color: #fff;
}

.bowbuilder-products .product-list .product-list-item:hover {
  border-color: #ccc;
}

.bowbuilder-products .product-list .product-list-item.selected {
  border-color: {{ settings.link-colour }};
}

.bowbuilder-products .product-list .product-list-item .product-info {
  display: none;
}

.product-image-wrap {
  border: none;
  background-color: transparent;
  width: 200px;
  height: 200px;
  overflow: hidden;
  display: table-cell;
  vertical-align: middle;
