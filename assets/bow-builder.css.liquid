/* Fancybox detail overlay
------------------------------------------------*/

.fancybox img.product-detail-image {
	float: left;
	width: 440px;
}

.fancybox-skin {
	background-color: #fff;
}


/* Flat button
------------------------------------------------*/

.flat-btn {
  display: inline-block;
  zoom: 1;
  *display: inline;
  background-color: {{ settings.secondary-accent-colour }};
  color: #ffffff;
  font-weight: 700;
  -webkit-border-radius: 4px;
  border-radius: 4px;
  border: 0;
  outline: 0;
  padding: 0.750em 0.875em;
  font-size: 0.813em;
  -webkit-font-smoothing: antialiased; }

.flat-btn.disabled, .flat-btn.disabled:hover {
  cursor: default !important;
  background-color: #ec565a !important; }

.flat-btn:hover {
  background-color: #333333; }

.flat-btn.small {
  padding: 0.750em 0.813em 0.500em 0.875em;
  font-size: 0.625em; }

.flat-btn.visible {
  background-color: #333333; }


/* Filter by tag
------------------------------------------------*/
.filter-by-tag {
  margin-top: 2.750em; }

.filter-by-tag p {
  display: inline-block;
  zoom: 1;
  /* ie7 fix */
  *display: inline;
  /* ie7 fix */ }

.filter-by-tag p {
  font-style: italic;
  font-size: 0.750em;
  margin: 0 12px 0 0;
  color: {{ settings.secondary-accent-colour }};
  -webkit-font-smoothing: antialiased; }

/* fsa */
.neuton .filter-by-tag p {
  font-size: 0.875em;
  font-weight: 300; }


