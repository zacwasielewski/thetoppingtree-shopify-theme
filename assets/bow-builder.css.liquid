  -webkit-font-smoothing: antialiased; }

/* fsa */
.neuton .filter-by-tag p {
  font-size: 0.875em;
  font-weight: 300; }


/* Wizard steps
------------------------------------------------*/

.step-progress {
    padding: 20px 0 10px 0;
    line-height: 40px;
    margin: 0 0 40px 0;
    background-color: rgb(241,241,241);
    border-radius: 5px;
}

.step-progress p {
  display: inline-block;
  zoom: 1;
  /* ie7 fix */
