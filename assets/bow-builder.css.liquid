.bow-builder-preview {
  display: block;
  float: right;
  width: 440px;
  height: 440px;
  margin-left: 20px;
  margin-right: 19px;
  text-align: left;
  text-align: center;
  background-color: #fff;
  position: relative;
}

.bow-builder-preview img {
  background-color: transparent;
  width: 440px;
  height: 440px;
  position: absolute;
  top: 0;
  left: 0;
}

#bow-builder .product-list {
  margin: 1em 0;
}

.bow-builder-products .product-list .product-list-item.selected {
  border-color: #666;
}

.bow-builder-products .product-list .product-list-item .product-info {
  display: none;
}

.bow-builder-product-select {
  display: none;
}

.product-image-wrap {
  border: none;
  width: 200px;
  height: 200px;
  border-radius: 100px;
  display: table-cell;
  vertical-align: middle;
  overflow: hidden;
  box-shadow: 1px 1px 3px 1px #eee;
}
.product-image-wrap img {
  vertical-align: middle;
}


