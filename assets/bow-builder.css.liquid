.bow-builder-progress {
  margin: 50px 0;
}
.bow-builder-progress li {
  display: inline-block;
  font-weight: 300;
  line-height: 48px;
  color: #dedede;
}

.bow-builder-progress li:before {
  font-family: 'Lunchbox Ornaments';
  content: 'v';
  margin: 0 .5em;
  font-size: 36px;
  height: 24px;
  color: #dedede;
  position: relative;
  top: 6px;
}
.bow-builder-progress li:first-child:before {
  content: none;
}

.bow-builder-progress li .step-order {
  background-color: {{ settings.text-colour }};
  color: #fff;
  display: inline-block;
  width: 36px;
  height: 36px;
  line-height: 36px;
  border-radius: 20px;
  margin-right: .25em;
}

.bow-builder-progress li,
.bow-builder-progress li a {
  color: {{ settings.text-colour }};
}
.bow-builder-progress li .step-order {
  background-color: {{ settings.text-colour }};
}

.bow-builder-progress li.active,
.bow-builder-progress li.active a {
  color: {{ settings.link-hover-colour }};
}
.bow-builder-progress li.active .step-order {
  background-color: {{ settings.link-hover-colour }};
}

.bow-builder-progress li.complete,
.bow-builder-progress li.complete a {
  color: {{ settings.link-colour }};
}
.bow-builder-progress li.complete .step-order {
  background-color: {{ settings.link-colour }};
}

.bow-builder-steps .step h2 {
  text-align: center;
}

.bow-builder-steps ol {
  margin: 0;
  padding: 0;
}

.bow-builder-steps ol li {
  margin: 0;
  padding: 10px;
}

.bow-builder-steps button {
  margin-left: 10px;
}

.bow-builder .step-content .step-pane {
  display: none;
}
.bow-builder .step-content .step-pane.active {
  display: block;
}



