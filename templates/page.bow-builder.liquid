  <section id="collection-content">

    <div id="xbowbuilder">
    
        <form action="/cart/add" method="post" enctype="multipart/form-data">

            {% assign linklist = linklists['bowbuilder'] %}
            {% assign current_time = 'now' | date: "%Y%m%d%H%M%S" %}

            <input type="hidden" id="bow-group" name="properties[bowbuilder-group]" value="{{ current_time }}" />

			<script id="product-detail-template" type="text/x-handlebars-template">
				{% raw %}
				<meta name="step" value="{{size}}">
				<meta name="id" value="{{id}}">
				<div class="product-detail">
					<img class="product-detail-image" src="{{image}}">
					<h1 class="product-detail-title">{{title}}</h1>
					<p class="product-detail-price">{{price}}</p>
					<div class="product-detail-description">{{{description}}}</div>
					<div>
						<button class="product-detail-select-btn action-btn accent-text">Select This Bow</button>
					</div>
				</div>
				{% endraw %}
			</script>

			{% assign collection = collections.large-bows %}

            <section class="step step-content" data-section="{{ collection.handle }}">
            
                <h2>Step 1: Pick your base bow</h2>
                
                <div class="step-overlay">
				
					<div class="filter-by-tag filter">
						<p>Show style:</p>
						<button class="flat-btn accent-text visible" data-filter="*">All</button>
						<button class="flat-btn accent-text" data-filter=".standard">Standard</button>
						<button class="flat-btn accent-text" data-filter=".funky">Funky</button>
						<button class="flat-btn accent-text" data-filter=".fancy">Fancy</button>
					</div>

					<ul class="product-list clearfix">
						{% for product in collection.products %}
							{% for variant in product.variants %}
								{% include 'bowbuilder-product-variant-item' %}
							{% endfor %}
						{% endfor %}
					</ul>

					<select name="id[]" class="product-select" data-section="{{ collection.handle }}">
						<option value=""></option>
						{% for product in collection.products %}
							{% for variant in product.variants %}
								<option value="{{ variant.id }}">
									{{ product.title }}
									({{ variant.price | money }})
								</option>
							{% endfor %}
						{% endfor %}
					</select>
				
					<button class="action-btn accent-text next-button btn hide">Next &rarr;</button>

				</div>
				
            </section>

			{% assign collection = collections.small-bows %}

            <section class="step step-content hide" data-section="{{ collection.handle }}">
        
                <h2>Step 2: Pick your small bow</h2>

                <div class="step-overlay">

					<div class="filter-by-tag filter">
						<p>Show style:</p>
						<button class="flat-btn accent-text visible" data-filter="*">All</button>
						<button class="flat-btn accent-text" data-filter=".ugly">Ugly</button>
						<button class="flat-btn accent-text" data-filter=".stupid">Stupid</button>
						<button class="flat-btn accent-text" data-filter=".dirty">Dirty</button>
					</div>
			
					<ul class="product-list clearfix">
						{% for product in collection.products %}
							{% for variant in product.variants %}
								{% include 'bowbuilder-product-variant-item' %}
							{% endfor %}
						{% endfor %}
					</ul>

					<select name="id[]" class="product-select" data-section="{{ collection.handle }}">
						<option value=""></option>
						{% for product in collection.products %}
							{% for variant in product.variants %}
								<option value="{{ variant.id }}">
									{{ product.title }}
									({{ variant.price | money }})
								</option>
							{% endfor %}
						{% endfor %}
					</select>

					<button class="action-btn accent-text back-button btn hide">&larr; Back</button>
					<button class="action-btn accent-text next-button btn hide">Next &rarr;</button>

        		</div>

            </section>

			{% assign collection = collections.toppings %}

            <section class="step step-content hide" data-section="{{ collection.handle }}">
        
                <h2>Step 3: The final touch!</h2>
            
                <div class="step-overlay">

					<div class="filter-by-tag filter">
						<p>Show style:</p>
						<button class="flat-btn accent-text visible" data-filter="*">All</button>
						<button class="flat-btn accent-text" data-filter=".shiny">Shiny</button>
						<button class="flat-btn accent-text" data-filter=".fluffy">Fluffy</button>
						<button class="flat-btn accent-text" data-filter=".orangey">Orangey</button>
					</div>
			
					<ul class="product-list clearfix">
						{% for product in collection.products %}
							{% for variant in product.variants %}
								{% include 'bowbuilder-product-variant-item' %}
							{% endfor %}
						{% endfor %}
					</ul>

					<select name="id[]" class="product-select" data-section="{{ collection.handle }}">
						<option value=""></option>
						{% for product in collection.products %}
							{% for variant in product.variants %}
								<option value="{{ variant.id }}">
									{{ product.title }}
									({{ variant.price | money }})
								</option>
							{% endfor %}
						{% endfor %}
					</select>

					<button class="action-btn accent-text back-button btn hide">&larr; Back</button>
					<button class="action-btn accent-text next-button btn hide">Next &rarr;</button>
        		
        		</div>
        		
            </section>

            <section class="step step-content hide" data-section="finalize">
        
                <h2>Step 4: Finalize</h2>
            
                <p>Preview and add to cart</p>

				<button class="action-btn accent-text back-button btn hide">&larr; Back</button>
				<button class="action-btn accent-text submit-button btn hide">Done</button>
				                
            </section>
            
        </form>

        <!--
        <button class="action-btn accent-text back-button btn">&larr; Back</button>
        <button class="action-btn accent-text next-button btn hide">Next &rarr;</button>
        <button class="action-btn accent-text submit-button btn">Done</button>
        -->

    </div>

  </section>

  <!-- Breadcrumbs -->
  <!-- +++++++++++++++++++++++++++++++++++++++ -->

  {% include 'breadcrumbs' %}

</div>

